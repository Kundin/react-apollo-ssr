{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
